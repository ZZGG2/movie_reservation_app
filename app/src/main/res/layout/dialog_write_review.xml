<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="300dp"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="#222222"
    android:padding="20dp">

    <TextView
        android:text="Write a Review"
        android:textColor="#FFFFFF"
        android:textSize="20sp"
        android:textStyle="bold"
        android:layout_marginBottom="15dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <TextView
        android:text="Search Movie"
        android:textColor="#AAA"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:layout_marginBottom="10dp">

        <AutoCompleteTextView
            android:id="@+id/actvDialogMovie"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:backgroundTint="#FFFFFF"
            android:textColor="#FFFFFF"
            android:hint="Type title..."
            android:textColorHint="#666666"
            android:completionThreshold="1"
            android:padding="10dp"
            android:inputType="text"
            android:imeOptions="actionSearch"/>

        <ImageButton
            android:id="@+id/btnSearchMovie"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/ic_search"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:tint="#E50914"
            android:scaleType="centerInside"/>
    </LinearLayout>

    <TextView
        android:text="Rating"
        android:textColor="#AAA"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <RatingBar
        android:id="@+id/rbDialogRating"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:progressTint="#FFD700"
        android:numStars="5"
        android:stepSize="0.5"/>

    <EditText
        android:id="@+id/edtDialogContent"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:hint="Share your thoughts..."
        android:textColor="#FFF"
        android:textColorHint="#666"
        android:background="#333"
        android:gravity="top"
        android:padding="10dp"
        android:layout_marginTop="10dp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="20dp"
        android:gravity="end">

        <Button
            android:id="@+id/btnDialogCancel"
            android:text="Cancel"
            android:backgroundTint="#555"
            android:textColor="#FFF"
            android:layout_marginEnd="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <Button
            android:id="@+id/btnDialogSubmit"
            android:text="Post"
            android:backgroundTint="#E50914"
            android:textColor="#FFF"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
    </LinearLayout>
</LinearLayout>