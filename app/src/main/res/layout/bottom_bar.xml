<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="65dp"
    android:orientation="horizontal"
    android:background="#1E1E1E"
    android:elevation="20dp"
    android:gravity="center_vertical">

    <Button
        android:id="@+id/nav_home"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:text="Home"
        android:textSize="11sp"
        android:background="@android:color/transparent"
        android:textColor="#AAAAAA"
        android:drawableTop="@drawable/ic_home"
        android:drawableTint="#AAAAAA"
        android:paddingTop="10dp"
        android:insetTop="0dp"
        android:insetBottom="0dp"/>

    <Button
        android:id="@+id/nav_booking"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:text="Reservation"
        android:textSize="11sp"
        android:background="@android:color/transparent"
        android:textColor="#AAAAAA"
        android:drawableTop="@drawable/ic_movie"
        android:drawableTint="#AAAAAA"
        android:paddingTop="10dp"
        android:insetTop="0dp"
        android:insetBottom="0dp"/>

    <Button
        android:id="@+id/nav_ticket"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:text="E-Ticket"
        android:textSize="11sp"
        android:background="@android:color/transparent"
        android:textColor="#AAAAAA"
        android:drawableTop="@drawable/ic_ticket"
        android:drawableTint="#AAAAAA"
        android:paddingTop="10dp"
        android:insetTop="0dp"
        android:insetBottom="0dp"/>

    <Button
        android:id="@+id/nav_board"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:text="Board"
        android:textSize="11sp"
        android:background="@android:color/transparent"
        android:textColor="#AAAAAA"
        android:drawableTop="@drawable/ic_board"
        android:drawableTint="#AAAAAA"
        android:paddingTop="10dp"
        android:insetTop="0dp"
        android:insetBottom="0dp"/>

    <Button
        android:id="@+id/nav_settings"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:text="Settings"
        android:textSize="11sp"
        android:background="@android:color/transparent"
        android:textColor="#AAAAAA"
        android:drawableTop="@drawable/ic_settings"
        android:drawableTint="#AAAAAA"
        android:paddingTop="10dp"
        android:insetTop="0dp"
        android:insetBottom="0dp"/>

</LinearLayout>